{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Vivid",
  "version": "0.1.0",
  "identifier": "com.vivid.ide",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Vivid",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "decorations": true,
        "transparent": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "shortDescription": "Creative coding IDE with hot-reload",
    "longDescription": "Vivid IDE - Visual creative coding IDE with integrated runtime, node-based chain visualizer, and built-in terminal for Claude Code.",
    "category": "DeveloperTool",
    "copyright": "Â© 2025 See Through Lab",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "dmg": {
        "appPosition": { "x": 180, "y": 170 },
        "applicationFolderPosition": { "x": 480, "y": 170 },
        "windowSize": { "width": 660, "height": 400 }
      },
      "entitlements": null,
      "exceptionDomain": null,
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "resources": [
      "../vivid/build/lib/*.dylib"
    ],
    "externalBin": []
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
